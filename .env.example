# Example env file
DATABASE_URL=mysql://root:@localhost:3306/stronic_db
# Optional: Dedicated test database (used when NODE_ENV=test or USE_TEST_DB=true)
TEST_DATABASE_URL=mysql://root:@localhost:3306/stronic_test_db
PORT=3000
# Admin API key (used for /api/admin endpoints)
ADMIN_API_KEY=dev-admin-key-123456

# API key required for /api/test-data endpoints
TEST_API_KEY=dev-test-key-123456

# SMTP (optional) - used to send confirmations/notifications
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM=Stronic Holdings <no-reply@stronicholdings.com>
ADMIN_NOTIFICATION_EMAIL=admin@stronicholdings.com

# AWS S3 (optional) - if provided, uploads will be stored in S3
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Optional admin login (username/password) and JWT secret
ADMIN_USER=admin
ADMIN_PASS=admin123!
JWT_SECRET=dev-secret-please-change
